<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quarter.Article">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="#03A9F4"
        android:layout_height="45dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/abolish_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_centerVertical="true"
                android:text="取消"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:text="发表文章"
                />
            <TextView
                android:id="@+id/publish_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:textColor="#fff"
                android:text="发表"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/my_cross_content"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入内容，禁止输入色情,暴力等违反国家法律内容你要非要上传我也没办法"
        android:background="@null"
        />
    <ImageView
        android:id="@+id/add_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/my_cross_content"
        android:src="@drawable/addsrc"/>
    <GridView
android:id="@+id/gridView"
android:layout_width="fill_parent"
android:layout_height="200dp"
android:layout_margin="10dp"
android:horizontalSpacing="5dp"
    android:verticalSpacing="5dp"
        android:layout_below="@+id/add_iv"
   android:numColumns="3"
 android:columnWidth="90dp"
android:stretchMode="columnWidth"
android:gravity="center">  
                </GridView>
</RelativeLayout>
